<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/appbar_x3"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="@dimen/navigation_margin_top"
        android:layout_marginLeft="@dimen/keyline_first"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_account_default" />

    <LinearLayout
        android:id="@+id/chosen_account_content_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/keyline_first"
        android:paddingBottom="@dimen/keyline_first_minus"
        android:layout_gravity="left|bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/profile_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Kim dong hun"
            android:textColor="@color/white_alpha_87"
            android:textSize="@dimen/content_body_14sp" />

        <TextView
            android:id="@+id/profile_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="kd47311010@gmail.com"
            android:textColor="@color/white_alpha_54"
            android:textSize="@dimen/content_caption_12sp" />

    </LinearLayout>

</FrameLayout>