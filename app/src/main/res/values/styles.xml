<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme.WithNavi" parent="@style/MyTheme" />

    <style name="MyTheme.FullScreen">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Widget" />

    <style name="Widget.MyTheme" />

    <style name="Widget.MyTheme.NavigationDrawerItem">
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <style name="Widget.MyTheme.NavigationDrawerItem.Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black_alpha_12</item>
    </style>

    <style name="Widget.MyTheme.NavigationDrawerItem.DividerBold">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/black_alpha_12</item>
    </style>

    <style name="Widget.MyTheme.NavigationDrawerItem.IconView">
        <item name="android:scaleType">centerInside</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.MyTheme.NavigationDrawerItem.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black_alpha_87</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Widget.MyTheme.Grid">
        <item name="android:background">#F5F5F5</item>

    </style>

    <style name="Widget.MyTheme.GridItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

</resources>